/************************
    Styling defaults
************************/
@import url('https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@300;400;700&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Sulphur Point', sans-serif;
    font-size: 16px;
    background-color: var(--bg-color);
    color: var(--text-color);
}

a {
    text-decoration: none;    
}

li {
    list-style: none;
}

button,
input,
select,
textarea {
    outline: none;
    border: none;
    background: transparent;
    display: none;
}

/**************
    Header
**************/
.header {
    displaY: flex;
    align-items: center;
    justify-content: space-between;
}

.hamburger-menu {
    width: 32px;
    display: block;
}

.hamburger-bar {
    height: 2px;
    width: 100%;
    background: var(--text-color);
    display: block;
    border-radius: 5px;
    margin-top: 5px;
}

.header-logo {
    display: block;
}

.header-nav {
    display: flex;
    margin: 0 auto;
    font-weight: 700;
    font-size: 1.5rem;
    text-transform: lowercase;
}

.header-nav a{
    margin: 0 30px;
}
.width {
    max-width: var(--page_width);
    width: 100%;
    padding: 20px 40px;
    margin: 0 auto;
   
}

@media screen and (max-width: 960px) {
   .width {
        padding: 20px 80px;
   } 

   .header-nav-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        z-index: 9;
        opacity: 0;
    }

    .nav-overlay-active {
        left: 0;
        opacity: 1;
    }

   .header-nav {
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        overflow: auto;
        background: /*var(--bg-color)*/ #fff;
        width: 90%;
        max-width: 300px;
        z-index: 10;
    }

    .header-nav-active {
        left: 0;
    }

    .header-nav-item {
        border-bottom: 1px solid var(--border-color);
    }

    .header-nav-anchor {
        display: block;
        padding: 20px;
        color: var(--text-color);
    }

}