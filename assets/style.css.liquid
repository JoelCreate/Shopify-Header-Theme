/************************
    Styling defaults
************************/
@import url('https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@300;400;700&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Sulphur Point', sans-serif;
    font-size: 16px;
    background-color: var(--bg-color);
    color: var(--text-color);
}

a {
    text-decoration: none;    
}

li {
    list-style: none;
}

button,
input,
select,
textarea {
    outline: none;
    border: none;
    background: transparent;
    display: none;
}

/**************
    Header
**************/
.header {
    displaY: flex;
    align-items: center;
    justify-content: space-between;
}

.hamburger-menu {
    width: 32px;
    display: block;
}

.hamburger-bar {
    height: 2px;
    width: 100%;
    background: var(--text-color);
    display: block;
    border-radius: 5px;
    margin-top: 5px;
}

.header-logo {
    display: block;
}

.header-nav {
    display: flex;
}


.width {
    max-width: var(--page_width);
    width: 100%;
    padding: 20px 40px;
    margin: 0 auto;
   
}

@media screen and (max-width: 960px) {
   .width {
        padding: 20px 80px;
   } 
}