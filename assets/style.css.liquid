/************************
    Styling defaults
************************/
@import url('https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@300;400;700&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Sulphur Point', sans-serif;
    font-size: 16px;
    background-color: var(--bg-color);
    color: var(--text-color);
}

a {
    text-decoration: none;    
}

li {
    list-style: none;
}

button,
input,
select,
textarea {
    outline: none;
    border: none;
    background: transparent;
    display: none;
}

/**************
    Header
**************/
.header {
    displaY: flex;
    align-items: center;
    justify-content: space-between;
}

.hamburger-menu {
    display: none;
}

.header-logo {
    display: block;
}

.header-nav {
    display: flex;
    margin: 0 auto;
    font-weight: 700;
    font-size: 1.5rem;
    text-transform: lowercase;
}

.header-nav a{
    margin: 0 30px;
    color: var(--text-color);
}

.header-sub {
    display: none;
}

.header-nav-anchor:hover > .header-sub {
    display: block;
}

.width {
    max-width: var(--page_width);
    width: 100%;
    padding: 20px 40px;
    margin: 0 auto;   
}

.hero {
    background: #000;
    color: #fff;
    padding: 200px 40px;
}

@media screen and (max-width: 960px) {
   .width {
        padding: 20px;
   } 

   .hamburger-menu {
        width: 32px;
        display: block;
        z-index: 99999;
    }

    .hamburger-bar {
        height: 2px;
        width: 100%;
        background: var(--text-color);
        display: block;
        border-radius: 5px;
        margin-top: 5px;
    }

   .header-nav-overlay {
        position: fixed;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        z-index: 9;
        opacity: 0;
        transition: 1s;
    }
   .header-nav {
        display: block;
        position: fixed;
        top: 0;
        left: -100%;
        height: 100%;
        overflow: auto;
        background: /*var(--bg-color)*/ #fff;
        width: 90%;
        max-width: 300px;
        z-index: 10;
        transition: 1s;
    }

    .nav-active {
        transition: 1s;
        left: 0;
        opacity: 1;
    }

    .header-nav-item {
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
    }

    .header-nav-anchor {
        display: block;   
        color: var(--text-color);
    }

    .header-sub {
        padding: 0px 20px;
        margin-top: 5px;
    }

    .header-sub-items {
        margin-top: 5px;
        font-size: 16px;
    }

    .header-sub-anchor {
        color: var(--medium-text-color);
    }

}