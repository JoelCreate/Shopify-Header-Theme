<div class="width"> 
    <div class="header">
        <a href="/" class="header-logo">
            <img src="{{ section.settings.logo | img_url: 'master'}}" alt="{{ site.name }}">
        </a>

        <button class="hamburger-menu">
            <span class="haburger-bar"></span>
            <span class="haburger-bar"></span>
            <span class="haburger-bar"></span>
        </button>

        <ul class="header-nav">
            {% for link in section.settings.navigation.links %} 
                <li>
                    <a hred="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

<style>
    .header-logo {        
        max-width: {{ section.settings.logo_width }}px;
    }
</style>

{% schema %}
    {
        "name": "Header",
        "tag": "header",
        "class": "header",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"                
            },
            {
                "type": "range",
                "id": "logo_width",
                "label": "Logo Width",
                "default": 100,
                "min": 40,
                "max": 300,
                "step": 5
            },
            {
                "type": "link_list",
                "id": "navigation",
                "label": "Navigation menu",
                "default": "main-menu"
            }
        ]
    }
{% endschema %}